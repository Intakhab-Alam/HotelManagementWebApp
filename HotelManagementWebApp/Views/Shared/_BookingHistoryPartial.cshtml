@model IEnumerable<HotelManagementWebApp.ViewModel.RoomBookingViewModel>

<table class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr class="info">
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Booking From</th>
            <th>Booking To</th>
            <th>Room Number</th>
            <th>Room Price</th>
            <th>Number Of Members</th>
            <th>Number Of Days</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.CustomerName
            </td>
            <td>
                @item.CustomerAddress
            </td>
            <td>
                @item.CustomerPhone
            </td>
            <td>
                @item.BookingFrom.ToString("dd-MMM-yyyy")
            </td>
            <td>
                @item.BookingTo.ToString("dd-MMM-yyyy")
            </td>
            <td>
                @item.RoomNumber
            </td>
            <td>
                @item.RoomPrice.ToString("#,##0.00")
            </td>
            <td>
                @item.NoOfMembers
            </td>
            <td>
                @item.NumberOfDays
            </td>
            <td>
                @item.TotalAmount.ToString("#,##0.00")
            </td>
        </tr>
        }
    </tbody>
</table>